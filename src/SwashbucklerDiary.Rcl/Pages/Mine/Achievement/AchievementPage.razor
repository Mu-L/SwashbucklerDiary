@page "/achievement"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MyAppBar>
    <MButton Icon="true"
             OnClick="NavigateToBack">
        <MIcon>
            arrow_back
        </MIcon>
    </MButton>

    @if (!showSearch)
    {
        <MToolbarTitle Class="font-weight-bold">
            @(I18n.T("Achievement"))
        </MToolbarTitle>
        <MSpacer></MSpacer>
    }

    <VisibleTextField @bind-Visible="showSearch"
                      @bind-Value="search"
                      OnInput="UpdateAchievements">
    </VisibleTextField>

    <MButton Icon="true"
             OnClick="()=>showSearch=!showSearch">
        <MIcon>
            search
        </MIcon>
    </MButton>
</MyAppBar>

<ScrollContainer>
    <div class="adaptive-card-container">
        @foreach (var item in _achievements)
        {
            <AchievementCard @key="item"
                             Value="item">
            </AchievementCard>
        }
    </div>

    <EmptyResult Show="_achievements.Count == 0"></EmptyResult>
</ScrollContainer>
