@namespace SwashbucklerDiary.Rcl.Components

<div class="@WrapClass">
    <div @ref="outlineElementRef" class="@InternalOutlineClass" style="@InternalOutlineStyle "></div>
    <div @ref="Ref" class="@Class" style="@InternalStyle"></div>
</div>

@code {
    string? WrapClass => new CssBuilder()
        .Add("d-flex")
        .AddIf("flex-row-reverse", RightOutline)
        .Build();

    string InternalStyle => new StyleBuilder()
        .Add("flex", "1")
        .Add("min-width", "1px")
        .Add(Style)
        .Build();

    string InternalOutlineClass => new CssBuilder()
        .Add("vditor-outline")
        .Add(OutlineClass)
        .AddIf("vditor-outline--right", RightOutline)
        .Build();

    string InternalOutlineStyle => new StyleBuilder()
        .Add("position", "sticky")
        .Add("top", "0px")
        .AddIf("display", "block", Outline)
        .Add(OutlineStyle)
        .Build();
}
